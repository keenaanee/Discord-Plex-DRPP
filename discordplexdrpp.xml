<Container version="2">
  <Name>PlexDiscordBot</Name>
  <Repository>https://github.com/keenaanee/Discord-Plex-DRPP</Repository>
  <Registry>https://github.com/keenaanee/Discord-Plex-DRPP</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support/>
  <Project/>
  <Overview>Plex Discord Rich Presence Bot</Overview>
  <Category>Media:Other</Category>
  <WebUI/>
  <TemplateURL/>
  <Icon/>
  <ExtraParams>--restart unless-stopped</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText/>
  <DonateLink/>
  <Description>
    A Discord bot that updates Rich Presence based on what you are watching in Plex.
  </Description>

  <Networking>
    <Mode>bridge</Mode>
  </Networking>

  <Data>
    <Config Name="AppData" Target="/app" Default="/mnt/user/appdata/PlexDiscordBot" Mode="rw" Description="Container Path: /app" Type="Path" Display="always" Required="false" Mask="false"/>
  </Data>

  <!-- Environment variables (left empty for end user to fill) -->
  <Config Name="PLEX_URL" Target="PLEX_URL" Default="" Mode="" Description="Plex server URL (e.g. http://192.168.x.x:32400)" Type="Variable" Display="always" Required="true" Mask="false"></Config>

  <Config Name="PLEX_TOKEN" Target="PLEX_TOKEN" Default="" Mode="" Description="Plex API token" Type="Variable" Display="always" Required="true" Mask="true"></Config>

  <Config Name="BOT_TOKEN" Target="BOT_TOKEN" Default="" Mode="" Description="Discord bot token" Type="Variable" Display="always" Required="true" Mask="true"></Config>

  <Config Name="TARGET_USER" Target="TARGET_USER" Default="" Mode="" Description="Plex username to track (leave blank to track any user)" Type="Variable" Display="always" Required="false" Mask="false"></Config>
</Container>
